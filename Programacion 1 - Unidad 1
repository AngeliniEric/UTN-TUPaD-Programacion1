# Ejercicio 3 
nombre = input("Ingresa tu nombre: ")
apellido = input("Ingresa tu apellido: ") 
edad = input("Ingresa tu edad: ")
lugar = input("Ingresa tu lugar de residencia: ")
print(f"Soy {nombre} {apellido}, tengo {edad} a√±os y vivo en {lugar}")


# Ejercicio 4 
radio = float(input("Ingrese el radio del circulo: "))    
area = 3.14 * (radio * radio)
perimetro = 3.14 * (radio *2)
print("El area es de: ", area)
print("El perimetro es de: ", perimetro)


# Ejercicio 5 
segundos = int(input("Ingrese una cantidad de segundos: "))
horas = segundos / 3600
print("Cantidad de horas: ", horas) 


# Ejercicio 6 
numero = int(input("Ingrese un numero: "))
resultado1 = numero * 1
print(f"{numero} * 1 = {resultado1}")
resultado2 = numero * 2
print(f"{numero} * 2 = {resultado2}")
resultado3 = numero * 3
print(f"{numero} * 3 = {resultado3}")
resultado4 = numero * 4
print(f"{numero} * 4 = {resultado4}")
resultado5 = numero * 5
print(f"{numero} * 5 = {resultado5}")
resultado6 = numero * 6
print(f"{numero} * 6 = {resultado6}")
resultado7 = numero * 7
print(f"{numero} * 7 = {resultado7}")
resultado8 = numero * 8
print(f"{numero} * 8 = {resultado8}")
resultado9 = numero * 9
print(f"{numero} * 9 = {resultado9}")

# Ejercicio 7 
numero1 = int(input("Ingrese el primer numero: "))
numero2 = int(input("Ingrese el segundo numero: "))
suma = numero1 + numero2
print("Suma: ",suma)
resta = numero1 - numero2
print("Resta: ", resta)
multiplicacion = numero1 * numero2
print("Multiplicacion: ", multiplicacion)
division = numero1 / numero2
print("Division: ", division)    


# Ejercicio 8 
altura = float(input("Ingrese su altura en metros: "))
peso = int(input("Ingrese su peso en kg: "))
imc = peso / (altura * altura)
print("Su indice de masa corporal es de: ", imc)


# Ejercicio 9 
celsius = float(input("Ingrese temperatura en grados Celsius: "))
fahrenheit = (celsius * 9/5) + 32   
print("Temperatura en grados Fahrenheit:", fahrenheit)


# Ejercicio 10 
num1 = int(input("Ingrese el primero numero: "))
num2 = int(input("Ingrese el segundo numero: "))
num3 = int(input("Ingrese el tercer numero: "))
promedio = (num1 + num2 + num3) / 3
print("El promedio de los tres numeros es de:", promedio)
